<%= form_tag '/events', method: :post do %>
    
    <div>
        <%= label_tag :title %> <br>
        <%= text_field_tag :title %>
    </div>

    <div>
        <%= label_tag :description %> <br>
        <%= text_area_tag :description %>
    </div>

    <div>
        <%= label_tag :event_image %> <br>
        <%= text_field_tag :image_url %>
    </div>

    <div>
        <%= label_tag :event_start_time %> <br>
        <%= text_field_tag :beg_time %>
    </div>

    <div>
        <%= label_tag :event_send_time %> <br>
        <%= text_field_tag :end_time %>
    </div>

    <div>
        <%= label_tag :max_number_of_athletes %> <br>
        <%= text_field_tag :max_athletes %>
    </div>

    <div>
        <%= label_tag :location %> <br>
        <%= text_field_tag :location %>
    </div>



    <div>
        <%= submit_tag %>
    </div>
<% end %>